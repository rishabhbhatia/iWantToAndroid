<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tiles_frame_splash"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/rl_splash_scroll_animation_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/siv_splash_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            scrolling_image_view:speed="1dp"
            scrolling_image_view:src="@drawable/ic_collage_new"
            android:visibility="gone"
            />

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/siv_splash_foreground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            scrolling_image_view:speed="1dp"
            android:layout_centerInParent="true"
            scrolling_image_view:src="@drawable/ic_collage_new" />

        <TextView
            android:id="@+id/tv_splash_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/iv_splash_anim_character"
            android:textSize="20sp"
            android:layout_marginBottom="25dp"
            />

        <ImageView
            android:id="@+id/iv_splash_anim_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />


    </RelativeLayout>

</LinearLayout>